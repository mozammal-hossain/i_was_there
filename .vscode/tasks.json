{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_runner",
      "type": "shell",
      "command": "fvm dart run build_runner build --delete-conflicting-outputs",
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": ["$dart"]
    },
    {
      "label": "build_runner (watch)",
      "type": "shell",
      "command": "fvm dart run build_runner watch --delete-conflicting-outputs",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": ["$dart"],
      "isBackground": true,
      "runOptions": { "instanceLimit": 1 }
    },
    {
      "label": "Build signed AAB",
      "type": "shell",
      "command": "fvm flutter build appbundle",
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
